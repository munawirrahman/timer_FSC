<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <masterLabel>Timer_FSC</masterLabel>
    <description>Show timer of opened screen</description>
    <apiVersion>51.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property
            name = "totalMilliseconds"
            label= "Total Milliseconds"
            description = "Time in milliseconds (Output and Input), Input to start time not from 0:0:0:0 default is 0"
            default = "0"
            type = "Integer"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>